
<openerp>
   <data>
      <record id="kts_view_stock_picking_form_inherit1" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit1</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>     
                 
                 <field name="arch" type="xml">
                    <field name="origin" position="after">
                    <field name="grn_no" attrs="{'invisible':[('picking_type_code','!=','incoming')]}"/>
                    <field name="transporter_name" attrs="{'invisible':[('picking_type_code','!=','incoming')]}"/>
                    <field name="chalan_no" attrs="{'invisible':[('picking_type_code','!=','incoming')]}"/>
                 </field>               
                  <xpath expr="//button[@name='force_assign']" position="replace"/>  
                 </field>
     </record> 
    
     <record id="kts_view_stock_move_tree_inherit1" model="ir.ui.view">
            <field name="name">stock.move.tree.inherit1</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_tree"/>     
            <field name="arch" type="xml">
              <button name="%(stock.move_scrap)d" position="attributes">
              <attribute name="states">partially_available,assigned</attribute>
              <attribute name="context">{'scrap': True}</attribute>
              </button>
              
               <field name="product_uom" position="after">
                   <field name="lot_ids"/>
               </field>
               <field name="location_dest_id" position="attributes">
                 <attribute name="invisible">0</attribute>
               </field>
              
            </field>
     </record>
     
     <record id="kts_view_stock_move_form_inherit1" model="ir.ui.view">
            <field name="name">stock.move.form.inherit1</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_form"/>     
            <field name="arch" type="xml">
              <button name="%(stock.move_scrap)d" position="attributes">
              <attribute name="states">partially_available,assigned</attribute>
              </button>
              
            </field>
     </record>
      <record id="view_stock_move_scrap_wizard_inherit" model="ir.ui.view">
            <field name="name">Scrap Move inherit</field>
            <field name="model">stock.move.scrap</field>
             <field name="inherit_id" ref="stock.view_stock_move_scrap_wizard"/>
            <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
              <h1 fgcolor="red" colors="Blue">Please Reprint Picking/Delivery After Scrap</h1>
            </xpath>
            <field name="product_qty" position="attributes">
              <attribute name="on_change">onchange_product_qty(product_id, product_qty)</attribute>
            </field>
            <field name="restrict_lot_id" position="attributes">
             <attribute name="options">{'no_quick_create': True, 'no_create' : True}</attribute>
             <attribute name="context">{'default_product_id': product_id}</attribute>
            </field>
            </field>
     </record>     
      
      <record id="view_pack_operation_details_form_inherit" model="ir.ui.view">
             <field name="name">stock.pack.operation.details.form.inherit</field>
             <field name="model">stock.pack.operation</field>
             <field name="inherit_id" ref="stock.view_pack_operation_details_form"/>
             <field name="arch" type="xml">
             <field name="location_id" position="attributes">
                 <attribute name="readonly">1</attribute>
             </field>
            <field name="location_dest_id" position="attributes">
                <attribute name="readonly">1</attribute>
              </field>
            
            </field>
      </record>
   
   </data>
</openerp>

